{
    "name": "basecodeoy/pennant",
    "description": "Manage feature flags for users and groups.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "BaseCode Oy",
        "laravel",
        "pennant"
    ],
    "authors": [
        {
            "name": "Brian Faust",
            "email": "hello@basecode.sh",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/basecodeoy/pennant",
    "support": {
        "issues": "https://github.com/basecodeoy/pennant/issues",
        "source": "https://github.com/basecodeoy/pennant",
        "security": "https://github.com/basecodeoy/pennant/blob/main/.github/SECURITY.md"
    },
    "require": {
        "php": "^8.3",
        "ext-mbstring": "*",
        "basecodeoy/crate": "^1.0.0",
        "spatie/laravel-model-states": "^2.7.2"
    },
    "require-dev": {
        "basecodeoy/standards": "^1.1.0"
    },
    "autoload": {
        "psr-4": {
            "BaseCodeOy\\Pennant\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true,
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        },
        "audit": {
            "abandoned": "report"
        },
        "preferred-install": "dist",
        "sort-packages": true
    }
}
